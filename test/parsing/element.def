From: alpine


%post
 apk add fortune sl
 mkdir /data


%runscript
 (
  SHLVL=$((SHLVL+2))
  eval "printf %s \"$(/exec printenv PS1)\""
  (cmd='env | sort | sed -e "s/^PS1=.*\$/PS1=.../g"'; echo "$cmd"; eval "/exec $cmd")
 )
 exec /sh


